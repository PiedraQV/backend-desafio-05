html
    head 
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css"
        rel="stylesheet")

    body
        ul(class="nav nav-fills nav-fill bg-dark p-2")
            li(class="nav-item")
                a(href="/formulario" class="nav-link text-white" ) Formulario
                    li(class="nav-item")
                        a(href="/productos" class="nav-link text-white") Productos
                        div(class="container" style="margin-top:120px")
                            form(action="/productos" method="POST")
                                div(class="form-group row")
                                    label(for="inputName" class="col-sm-2 col-form-label") Nombre
                                div(class="col-sm-10")
                                    input(type="text" class="form-control " id="inputName" name="title" placeholder="Name of the product")

                                div(class="form-group row")
                                    label(for="inputPass" class="col-sm-2 col-form-label") Precio
                                div(class="col-sm-10")
                                    input(type="number" class="form-control" id="inputPass" name="price" placeholder="Price of the product")

                                div(class="form-group row")
                                    label(for="inputThumb" class="col-sm-2 col-form-label") Imagen
                                div(class="col-sm-10")
                                    input(type="text" class="form-control" id="inputThumb" name="thumbnail" placeholder="URL of the product")
                                
                                div(class="form-group row")
                                    div(class="col-sm-10")
                                        button(type="submit" class="btn btn-warning") Enviar