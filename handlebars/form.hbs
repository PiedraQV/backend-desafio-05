<div class="container" style="margin-top:120px">
    <form action="/productos" method="POST">
  <div class="form-group row">
    <label for="inputName" class="col-sm-2 col-form-label">Nombre</label>
    <div>
      <input type="text" class="form-control " id="inputName" name="title" placeholder="Ingresa el nombre del producto">
    </div>
  </div>
  <div class="form-group row">
    <label for="inputPass" class="col-sm-2 col-form-label">Precio</label>
    <div >
      <input type="number" class="form-control" id="inputPass" name="price" placeholder="Ingresa el precio del producto">
    </div>
  </div>
  <div class="form-group row">
    <label for="inputThumb" class="col-sm-2 col-form-label">Imagen</label>
    <div>
      <input type="text" class="form-control" id="inputThumb" name="thumbnail" placeholder="URL de la imagen del producto">
    </div>
  </div>
  <br>
  <div class="form-group row">
    <div>
      <button type="submit" class="btn btn-primary">Enviar</button>
    </div>
  </div>
</form>
</div>